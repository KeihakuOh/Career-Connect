FROM golang:1.24-alpine

# 必要なパッケージをインストール
RUN apk add --no-cache git gcc musl-dev

# Air（ホットリロード）をインストール
RUN go install github.com/air-verse/air@latest

# 作業ディレクトリを設定
WORKDIR /app

# go.modとgo.sumをコピー（依存関係のキャッシュ用）
COPY go.mod go.sum ./

# 依存関係をダウンロード
RUN go mod download

# ソースコードをコピー
COPY . .

# ポートを公開
EXPOSE 8080

# Airで起動
CMD ["air"]
